{
    "manifest_version": 2,
    
    "name": "VK Notifications",
    "version": "1.3.1",
    "description": "Уведомляет о добавленных новостях в паблики, группы, сообщества VK",
    
    "permissions": [    
        "http://*/*", 
        "https://*/*",
        "notifications",
        "storage",
        "alarms",
        "tabs"
    ],
    
    "browser_action": {
        "default_title": "VK Notifications",
        "default_icon":  "images/icon128.png",
        "default_popup": "html/popup.html"
    },
    
    "background": {
        "scripts": [ 
            "libs/jquery-2.1.1.min.js",
            "js/background.js"            
        ],
        "persistent": true
    },
        
    "icons": { "icon128": "images/icon128.png" }
}